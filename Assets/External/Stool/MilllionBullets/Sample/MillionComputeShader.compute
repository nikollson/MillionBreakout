#pragma kernel CSMain

struct State
{
	float3 pos;
	int enable;
};

struct Option
{
	float3 accel;
	float4 col;
};

float DeltaTime;
RWStructuredBuffer<State> States;
RWStructuredBuffer<Option> Options;

[numthreads(8, 1, 1)]
void CSMain(uint3 id : SV_DispatchThreadID)
{
	if (States[id.x].enable == 0)return;
	States[id.x].pos += Options[id.x].accel * DeltaTime;
}